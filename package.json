{
  "name": "llm-repo-bundler",
  "description": "Convert a repository (or a subset of a repository) into a single text file",
  "version": "0.0.0",
  "author": "Phillip Dupuis",
  "type": "module",
  "homepage": "https://github.com/phillipdupuis/llm-repo-bundler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipdupuis/llm-repo-bundler.git"
  },
  "bugs": {
    "url": "https://github.com/phillipdupuis/llm-repo-bundler/issues"
  },
  "keywords": [
    "actions",
    "ci"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "llm-repo-bundler": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@github/local-action": "^3.1.0",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.35.0",
    "ts-jest": "^29.2.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
